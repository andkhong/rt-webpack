{
    "compilerOptions": {
      "allowJs": false,
      "sourceMap": false,
      "declaration": false,
      "skipLibCheck": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "removeComments": true,
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "node",
      "jsx": "react",
      "rootDir": "src",
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
        "src/*": ["src/*"],
        "assets/*": ["src/assets/*"],
        "shared/*": ["src/shared/*"],
        "utils/*": ["src/utils/*"]
      },
      "typeRoots": [
        "node_modules/@types"
      ],
      "types": [ "react", "react-dom", "node" ],
      "lib": [ 
        "dom",
        "es5",
        "es6",
        "esnext",
        "scripthost"
      ]
    },
    "include": [ "src/**/*"],
    "exclude": [
      "node_modules",
      "buid",
      "dist"
    ],
    "awesomeTypescriptLoaderOptions": {
        "useCache": true,
        "isolatedModules": true,
        "reportFiles": [
          "src/**/*.{ts,tsx}"
        ]
    }
  }